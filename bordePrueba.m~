% Rutina para corroborar que la construcci√≥n de la malla 
% es correcta.
% 
% Construyo borde de prueba
% 
coordenadasX = [-200, -250, -150, -130, -100, -80,  -50, 0, 50, 80, 100, 150, 130, 110, 50, 25, 0, -50, -100 -200];
coordenadasY = [0, -50, -80, -90, -70, -100, -90, -40, -60, -30, -20, 10, 40, 80, 100, 50, 30, 40, 60, 0];

coordenadasXY = [coordenadasX', coordenadasY'];
bordeTest = Borde();
bordeTest.coordenadasXY = coordenadasXY;
bordeTest.tipoBorde = 'Prueba';
% graficaBorde(bordeTest)
geoTest = Geometria();
geoTest.Borde = bordeTest;
geoTest.deltaX = 0.1*(max(coordenadasX) - min(coordenadasX));
geoTest.deltaY = geoTest.deltaX;
geoTest.Malla = Malla(geoTest, 'staggered');
